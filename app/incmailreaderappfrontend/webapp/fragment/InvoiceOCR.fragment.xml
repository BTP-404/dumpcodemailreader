<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m">
    <Dialog id="attachmentDialogOCR" title="Select Attachment For OCR Proess" class="sapUiResponsivePadding" draggable="true" resizable="true">
        <content>
            <VBox>
                <Table id="attachmentTable1" items="{/attachments}">
                    <columns>
                        <Column>
                            <Text text="File Name" />
                        </Column>
                        <Column>
                            <Text text="File Type" />
                        </Column>
                        <Column>
                            <Text text="Preview" />
                        </Column>
                        <Column>
                            <Text text="Action" />
                        </Column>

                    </columns>
                    <items>
                        <ColumnListItem>
                            <cells>
                                <Text text="{fileName}" />
                                <Text text="{fileType}" />
                                <HBox >
                                    <Button  icon="sap-icon://show" type="Attention" press="onPreviewAttachment" tooltip="Preview file" />
                                 </HBox>
                                 <HBox >
                                    <Button  icon="sap-icon://step" type="Negative" press="" text="Proceed to OCR" tooltip="Select this for OCR process" />
                                 </HBox>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>

                <!-- This container is for file preview -->
              
            </VBox>
        </content>
        <endButton>
            <Button text="Close" press="onCloseAttachmentDialog1"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>
