<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Popover
        id="myPopover"
        title="User"
        class="sapUiResponsivePadding--footer"
        placement="Bottom"
    >
        <footer>
            <OverflowToolbar>
                <Text text="{data>userEmail}" />
                <ToolbarSpacer />
                <Button
                    id="logout"
                    text="logout"
                    type="Negative"
                    press="handlelogoutPress"
                />
            </OverflowToolbar>
        </footer>
    </Popover>
</core:FragmentDefinition>
