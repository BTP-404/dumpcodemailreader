<mvc:View
    xmlns:core="sap.ui.core"
    controllerName="com.incresol.incmailreaderappfrontend.controller.HomePage"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:tnt="sap.tnt"
    displayBlock="true"
>
    <Panel id="_IDGenPanel">
        <Bar
            id="headerBar1"
            class="header"
        >
            <contentLeft>
                <Image
                    id="_IDGenImage11"
                    src="./images/incresollogo.png"
                    alt="Logo"
                    width="115px"
                    height="35px"
                />
            </contentLeft>
            <contentMiddle>
                <Text
                    id="_IDGenTitle11"
                    text="Incresol Mail Processor"
                    class="title"
                />
            </contentMiddle>
            <contentRight>
                <core:Icon
                    id="_IDGenIcon"
                    src="sap-icon://customer"
                    color="#08085b"
                    class="bold-icon"
                    press="handlePopoverPress"
                />
            </contentRight>
        </Bar>
    </Panel>
    <Panel
        id="navList"
        height="100%"
    >
        <HBox
            id="_IDGenHBox1"
            class="sapUiLargeMargin"
        >
            <GenericTile
                id="_IDGenGenericTile"
                class="sapUiTinyMargin  "
                header="Configuration"
                press="onConfigurationSelect"
                frameType="TwoByOne"
                visible="false"
            >
                <TileContent id="_IDGenTileContent">
                    <core:Icon
                        id="_IDGenIcon1"
                        class="iconConfig"
                        src="sap-icon://key-user-settings"
                        color="#3fb9ec"
                    />
                </TileContent>
            </GenericTile>

            <GenericTile
                id="_IDGenGenericTile1"
                class="sapUiTinyMargin"
                header="Inbox"
                press="onInboxSelect"
                frameType="TwoByOne"
            >
                <TileContent id="_IDGenTileContent1">
                    <core:Icon
                        id="_IDGenIcon2"
                        class="iconConfig"
                        src="sap-icon://email"
                        color="#3fb9ec"
                    />
                </TileContent>
            </GenericTile>

            <GenericTile
                id="_IDGenGenericTile2"
                class="sapUiTinyMargin"
                header="Invoice App"
                press="onHomeSelect"
                frameType="TwoByOne"
            >
                <TileContent id="_IDGenTileContent2">
                    <core:Icon
                        id="_IDGenIcon3"
                        class="iconConfig"
                        src="sap-icon://receipt"
                        color="#3fb9ec"
                    />
                </TileContent>
            </GenericTile>
        </HBox>
    </Panel>
</mvc:View>
