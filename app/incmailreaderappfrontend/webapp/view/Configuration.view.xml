<mvc:View
    xmlns:core="sap.ui.core"
    controllerName="com.incresol.incmailreaderappfrontend.controller.Configuration"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:tnt="sap.tnt"
    displayBlock="true"
>
    <Panel id="_IDGenPanel">
        <Bar
            id="headerBar1"
            class="header"
        >
            <contentLeft>
                <Image
                    id="_IDGenImage11"
                    src="./images/incresollogo.png"
                    alt="Logo"
                    width="115px"
                    height="35px"
                />
            </contentLeft>
            <contentMiddle>
                <Text
                    id="_IDGenTitle11"
                    text="Incresol Mail Processor"
                    class="title"
                />
            </contentMiddle>
            <contentRight>
                <core:Icon
                    id="_IDGenIcon"
                    src="sap-icon://customer"
                    color="#08085b"
                    class="bold-icon"
                    press="handlePopoverPress"
                />
            </contentRight>
        </Bar>
    </Panel>
        <Panel
        id="navListConfig"
        height="100%"
    >
        <HBox
            id="_IDGenHBox11"
            class="sapUiLargeMargin"
        >
            <GenericTile
                id="_IDGenGenericTile11"
                class="sapUiTinyMargin  "
                header="Email Account Configuration"
                press="onEmailConfigurationSelect"
                frameType="TwoByOne"
            >
                <TileContent id="_IDGenTileConten1t">
                    <core:Icon
                        id="_IDGenIco1n1"
                        class="iconConfig"
                        src="sap-icon://account"
                        color="#3fb9ec"
                    />
                </TileContent>
            </GenericTile>

            <GenericTile
                id="_IDGenGenericTile21"
                class="sapUiTinyMargin"
                header="User Management"
                press="onUserSelect"
                frameType="TwoByOne"
            >
                <TileContent id="_IDGenTileContent21">
                    <core:Icon
                        id="_IDGenIcon21"
                        class="iconConfig"
                        src="sap-icon://employee"
                        color="#3fb9ec"
                    />
                </TileContent>
            </GenericTile>
        </HBox>
    </Panel>
</mvc:View>
